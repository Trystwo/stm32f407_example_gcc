{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "openocd",
            "type": "shell",
            "command": "openocd -f interface/stlink.cfg -f target/stm32f4x.cfg",
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
                "-j16"
            ]
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "arm-none-eabi-gdb",
            "args": [
                "build/stm32f407xx.elf",
                "-x",
                "gdbinit"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make",
            "args": [
                "flash"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}